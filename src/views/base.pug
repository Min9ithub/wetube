include mixins/message

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle} | #{siteName}
        link(rel="shortcut icon", href="https://www.youtube.com/s/desktop/e06db45c/img/favicon.ico")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
        link(rel="stylesheet", href="/static/css/styles.css")
    body
        if messages.error
            +message("error", messages.error)
        if messages.info
            +message("info", messages.info)
        if messages.success
            +message("success", message.success)
        include partials/header
        main
            block content
        div.themeBtn__container
            button.themeBtn#themeBtn
                i.far.fa-sun#themeIcon
        include partials/footer
    script(src="/static/js/main.js") 
    block scripts